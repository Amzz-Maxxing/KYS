@page
@model Pages_CalorieIntakeCalculator
@{
    ViewData["Title"] = "Calorie Intake Calculator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calorie Calculator</title>
    <script src="Calorie.js"></script>
    <style>
        body {
            background-color: #fdf6ed;
            text-align: center;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 500px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
        }

        label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button {
            background-color: #72a3b2;
            color: white;
            font-size: 18px;
            padding: 10px;
            margin-top: 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            box-shadow: 3px 3px 5px #4a6b76;
            width: 100%;
        }

            button:hover {
                background-color: #5a8a99;
            }

        #result {
            font-size: 20px;
            font-weight: bold;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Calorie Calculator</h1>
        <label for="weight">Weight (kg):</label>
        <input type="number" id="weight" required>

        <label for="height">Height (cm):</label>
        <input type="number" id="height" required>

        <label for="age">Age:</label>
        <input type="number" id="age" required>

        <label for="gender">Gender:</label>
        <select id="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>

        <label for="activity">Activity Level:</label>
        <select id="activity">
            <option value="Sedentary">Sedentary</option>
            <option value="Lightly Active">Lightly Active</option>
            <option value="Moderately Active">Moderately Active</option>
            <option value="Fairly Active">Fairly Active</option>
            <option value="Very Active">Very Active</option>
        </select>

        <button onclick="CalorieCal()">Calculate</button>
        <h2 id="result"></h2>
    </div>

    <script>
        function CalorieCal() {
            var weight = document.getElementById("weight").value;
            var height = document.getElementById("height").value;
            var age = document.getElementById("age").value;
            var gender = document.getElementById("gender").value;
            var activity = document.getElementById("activity").value;

            var exercise;
            if (activity == "Sedentary") {
                exercise = 1.2;
            } else if (activity == "Lightly Active") {
                exercise = 1.375;
            } else if (activity == "Moderately Active") {
                exercise = 1.55;
            } else if (activity == "Fairly Active") {
                exercise = 1.725;
            } else {
                exercise = 1.9;
            }

            var daily_calorie_intake;
            if (gender == "male") {
                daily_calorie_intake = 66.47 + (13.75 * weight) + (5.003 * height) - (6.775 * age);
            } else {
                daily_calorie_intake = 65.1 + (9.563 * weight) + (1.85 * height) - (4.676 * age);
            }
            daily_calorie_intake *= exercise;

            document.getElementById("result").innerText = "Daily Calorie Intake: " + daily_calorie_intake.toFixed(2);
        }
    </script>
</body>
</html>
